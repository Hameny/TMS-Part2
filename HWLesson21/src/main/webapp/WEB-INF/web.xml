<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>ServletDateTimeNow</servlet-name>
        <servlet-class>com.example.hwlesson21.ServletDateTimeNow</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletDate</servlet-name>
        <servlet-class>com.example.hwlesson21.ServletDate</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletDayOfWeek</servlet-name>
        <servlet-class>com.example.hwlesson21.ServletDayOfWeek</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletDayOfTheYear</servlet-name>
        <servlet-class>com.example.hwlesson21.ServletDayOfTheYear</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>ServletDateTimeNow</servlet-name>
        <url-pattern>/date/time_now</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletDate</servlet-name>
        <url-pattern>/date</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletDayOfWeek</servlet-name>
        <url-pattern>/date/day_of_week</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletDayOfTheYear</servlet-name>
        <url-pattern>/date/number_of_year</url-pattern>
    </servlet-mapping>
</web-app>